{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES6",
		"sourceMap": false,
		"strict": true,
		"stripInternal": true,
		"declaration": true,
		"outDir": "dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"composite": true,
		"typeRoots": [
			"../../node_modules/@types",
			"node_modules/@types"
		]
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules/**/*",
		"dist/**/*"
	]
}
