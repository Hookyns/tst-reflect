{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2019",
		"removeComments": true,
		"sourceMap": true,
		"stripInternal": true,
		"strict": true,
		"rootDir": "./src",
		"baseUrl": "./src",
		"outDir": "./dist",
		"composite": true,
		"esModuleInterop": true,
		"typeRoots": [
			"../../node_modules/@types",
			"node_modules/@types"
		]
	},
	"references": [
		{
			"path": "../abstract"
		},
		{
			"path": "../runtime"
		}
	],
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules/**/*",
		"dist/**/*"
	]
}
