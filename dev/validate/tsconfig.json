{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"removeComments": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"rootDir": "../..",
		"outDir": "./dist",
		"typeRoots": [
			"../../node_modules/@types"
		],
		"plugins": [
			{
				"transform": "tst-reflect-transformer"
			}
		]
	},
	"include": [
		"**/*.ts"
	],
	"reflection": {
		"metadata": false,
		"debugMode": false
	}
}