{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"removeComments": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"rootDir": "../..",
		"typeRoots": [
			"../node_modules/@types"
		],
		"plugins": [
			{
				"transform": "../../transformer/dist/index.js"
			}
		]
	},
	"include": [
		"**/*.ts"
	],
	"reflection": {
		"metadata": false,
//		"metadata": "metadata.lib.js",
		"debugMode": true
	}
}
