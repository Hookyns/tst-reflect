{
	"compilerOptions": {
		"module": "NodeNext",
//		"moduleResolution": "classic",
		"target": "esnext",
		"removeComments": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"rootDir": "../..",
		"typeRoots": [
			"../../node_modules/@types"
		],
		"plugins": [
			{
				"transform": "tst-reflect-transformer"
			}
		]
	},
	"include": [
		"**/*.ts",
		"**/*.mts"
	],
	"reflection": {
//		"metadata": {
//			"type": "typelib"
//		},
		"debugMode": false
	}
}