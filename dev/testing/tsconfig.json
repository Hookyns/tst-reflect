{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"removeComments": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"outDir": "dist",
		"rootDir": "./src",
		"typeRoots": [
			"../../node_modules/@types"
		],
		"plugins": [
			{
				"transform": "../../transformer/index.js"
			}
		],
	},
	"include": [
		"src/**/*.ts"
	],
	"ts-node": {
		"compiler": "ttypescript"
	},
	"reflection": {
		"metadata": false,
		"debugMode": true
	}
}
